    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false,
            "args": [],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Debug Main Program",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false,
            "args": []
        },
        {
            "name": "Python: Debug with Thread Support",
            "type": "debugpy", 
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false,
            "args": [],
            "subProcess": true,
            "django": false,
            "gevent": false,
            "jinja": false,
            "debugOptions": [
                "BreakOnSystemExitZero",
                "ShowReturnValue", 
                "RedirectOutput"
            ]
        }
    ]
}